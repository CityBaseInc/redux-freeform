{
  "name": "redux-freeform",
  "version": "6.2.2",
  "description": "A small Redux form library that supports purely functional apps, without magic",
  "main": "dist/redux-freeform.cjs.js",
  "module": "dist/redux-freeform.esm.js",
  "browser": "dist/redux-freeform.umd.js",
  "repository": "https://github.com/CityBaseInc/redux-freeform",
  "author": "Citybase Inc.",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "test": "jest",
    "format": "prettier --write \"{src,examples,website,test}/**/*.js\" && eslint ./ --ext .js,.jsx,.ts,.tsx --fix",
    "format-check": "prettier --check \"{src,examples,website,test}/**/*.js\"",
    "lint": "eslint ./ --ext .js,.jsx,.ts,.tsx",
    "coverage": "jest --coverage --coverageReporters=lcov --coverageReporters=text --coveragePerFile=true"
  },
  "dependencies": {
    "acorn": "^8.12.1",
    "dayjs": "^1.11.7",
    "immer": "^9.0.21"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/register": "^7.21.0",
    "@fast-check/jest": "^2.0.3",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "coveralls": "^3.1.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "esm": "^3.2.25",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "rollup": "2.79.1"
  },
  "resolutions": {
    "acorn": "^6.4.1",
    "minimist": "^1.2.2"
  },
  "files": [
    "dist"
  ],
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "src/**/*.js",
      "!dist/**/*"
    ],
    "require": [
      "esm"
    ]
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
